{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "./dist",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "exclude": ["--*", "**/--*"],
    "include": ["./src/**/*.ts"]
}
